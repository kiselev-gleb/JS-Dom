<body>
    <script>
        let x = Number(prompt("Введите x: "));
        function countY(ar1, yes, no) {
            if (ar1 > 6) yes(ar1)        
            else no(ar1)     
        }
        function callbackYes(){
            console.log(4 / x * (x + 1))
        }
        function callbackNo(){
            console.log(x)
        }
        
        countY(x, callbackYes, callbackNo);
    </script>
